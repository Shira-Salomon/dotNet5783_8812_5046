<Window x:Class="PL.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource self}}">

    <Grid Background="#f2f2f2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Background="#2196F3" VerticalAlignment="Center">
            <TextBlock Text="דף כניסה" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White" Margin="0,20,0,10"/>
        </StackPanel>

        <!-- Content Section -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Manager View Button -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20">
                <Button Content="תצוגת מנהל" Click="ManagerView_Click" Margin="5" Padding="10"/>
            </StackPanel>

            <!-- Time and Advance Buttons -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{Binding CurrentTime , Mode=OneWay}" Margin="5" FontSize="18"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="+Advance One Day" Click="AdvanceDay_Click" Margin="5" Padding="10"/>
                    <Button Content="+Advance One Hour" Click="AdvanceHour_Click" Margin="5" Padding="10"/>
                </StackPanel>
            </StackPanel>

            <!-- Engineer View Button -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="20">
                <Button Content="תצוגת מהנדס" Click="EngineerView_Click" Padding="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
