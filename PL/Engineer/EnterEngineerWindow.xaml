<Window x:Class="PL.Engineer.EnterEngineerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Engineer"
        mc:Ignorable="d"
        Title="EnterEngineerWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBox x:Name="txtEngineerID" Width="200" Margin="10" Text="Enter Engineer ID"/>
            <Button Content="Submit" Click="Submit_Click" Margin="10"/>
        </StackPanel>

        <ListBox x:Name="lstTasks" HorizontalAlignment="Right" VerticalAlignment="Top" Width="400" Margin="10">
            <!-- Bind the list items to a collection of tasks -->
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding TaskName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding TaskDescription}"/>
                        <Button Content="Update Task" Click="UpdateTask_Click"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
